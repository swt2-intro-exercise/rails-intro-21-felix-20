<h1> Authors Index </h1>

<style>
    table, th, td {
    padding: 10px;
    border: 1px solid green; 
    border-collapse: collapse;
    }
</style>

<%= link_to 'New', new_author_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    <th colspan="2"></th>
  </tr>
 
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
    </tr>
  <% end %>
</table>